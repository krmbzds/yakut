#login.modal.fade
	.modal-dialog
		.modal-content
			.modal-header
				%h4.modal-title Login
			.modal-body
				%ul.nav.nav-tabs
					%li.active
						%a{href: '#userlogin', 'data-toggle' => 'tab'} User
					%li.pull-right
						%a{href: '#adminlogin', 'data-toggle' => 'tab'} 
							%small Administrator
					%li.pull-right
						%a{href: '#teacherlogin', 'data-toggle' => 'tab'} 
							%small Teacher
				.tab-content
					#userlogin.tab-pane.active 
						= simple_form_for(:user, :url => user_session_path) do |f|
							.form-inputs
								= f.input :email, :required => false, :autofocus => true, input_html: { class: 'form-control' }
								= f.input :password, :required => false, input_html: { class: 'form-control' } 
								= f.input :remember_me, :as => :boolean
							.form-actions
								= f.submit 'Sign in', class: 'btn btn-primary' 
					#teacherlogin.tab-pane 
						= simple_form_for(:teacher, :url => teacher_session_path) do |f|
							.form-inputs
								= f.input :email, :required => false, :autofocus => true, input_html: { class: 'form-control' }
								= f.input :password, :required => false, input_html: { class: 'form-control' } 
								= f.input :remember_me, :as => :boolean
							.form-actions
								= f.submit 'Sign in', class: 'btn btn-primary' 
					#adminlogin.tab-pane 
						= simple_form_for(:admin, :url => admin_session_path) do |f|
							.form-inputs
								= f.input :email, :required => false, :autofocus => true, input_html: { class: 'form-control' }
								= f.input :password, :required => false, input_html: { class: 'form-control' } 
								= f.input :remember_me, :as => :boolean
							.form-actions
								= f.submit 'Sign in', class: 'btn btn-primary' 